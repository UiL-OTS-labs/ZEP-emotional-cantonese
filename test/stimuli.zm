//Symbolic definition of item type.
enum ItemType
{
    NEUTRAL,
    HAPPY,                
    SAD,
    FEARFUL
}

//import stimuli;

// Item table record.
record TestItem {

    int id;
    ItemType emotion;
    string sentence_fname;
    string sentence_string;
    
    string alt1;
    string alt2;
    string alt3;
    string alt4;

    int correct_button;
}

record PracticeItem {
    int id;
    ItemType emotion;
    string sentence_fname;
    string sentence_string;
    
    string alt1;
    string alt2;
    string alt3;
    string alt4;

    int correct_button;
}


// arrays for practice and test
//TestItem[..] practice_items;
TestItem[..]     test_items;


int load_stimuli()
{
    int status;
    string fn = stimuli_dir() + "test_items.csv";

    status = test_items.load(fn, true, 0);

    return status;
}


